#!/bin/bash

set -e

commandName=$(basename $0)
flake_uri=$HOME/.config/home-manager
username=$(whoami)
home_uri=$flake_uri\#homeConfigurations.$username

# get path to a package
path() {
  nix path-info $home_uri.pkgs.$1
}

build() {
  nix build --show-trace --no-link $home_uri.activationPackage
  "$(nix path-info $home_uri.activationPackage)"/activate
}

switch() {
  "$(nix path-info $home_uri.activationPackage)"/home-path/bin/home-manager switch --flake "$flake_uri#$username"
}

update() {
  nix flake update $flake_uri
}

case $1 in
build)
  build
  ;;
switch)
  switch
  ;;
update)
  update
  ;;
path)
  path $2
  ;;
*)
  echo "Usage: $commandName {update|build|switch|path}"
  exit 1
  ;;
esac
