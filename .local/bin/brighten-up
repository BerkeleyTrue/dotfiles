#!/bin/bash

MIN=960
MAX=$(brightnessctl max)
CURR=$(brightnessctl get)
ID=1234

if (($CURR >= $MAX)); then
  makoify -a Selena -r $ID "󰃚 "
else
  if (($CURR == 0)); then
    brightnessctl set 1%
  elif (($CURR == $MIN)); then
    brightnessctl set 10%
  else
    brightnessctl set +10%
  fi

  CURR=$(brightnessctl get)
  PER=$(awk "BEGIN { pc=100*${CURR}/${MAX}; i=int(pc); print (pc-i<0.5)?i:i+1 }")

  if (($CURR >= $MAX)); then
    makoify -a Selena -r $ID "󰃚 "
  else
    makoify -a Selena -r $ID "󰽨 $PER"
  fi
fi
