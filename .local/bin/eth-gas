#!/usr/bin/env bb
; vim:ft=clojure
(ns local.bin.crypto
  (:require [clojure.string :as str]
            [clojure.tools.cli :refer [parse-opts]]
            [babashka.curl :as curl]
            [cheshire.core :as json]))

(def url "https://ethgasstation.info/json/ethgasAPI.json")

(defn format-gas [{:keys [average avgWait]}]
  (str " " (format "%,.0f" (float (/ average 10))) " ( " avgWait "m)"))

(comment
  (->
    (curl/get url)
    (:body)
    (json/parse-string true)))

(defn make-get []
  (->
    (curl/get url)
    (:body)
    (json/parse-string true)
    (format-gas)))

(comment
  (->
    (make-get)))

(def specs
  [["-h" "--help"]])

(def command "eth-gas")

(def help-menu
  (str/join "\n  "
    [(str "  Usage: " command)
     ""
     ""
     ""
     (str command " -h -- this menu")]))

(def opts (parse-opts *command-line-args* specs))

(let [is-help? (:help (:options opts))]

  (cond
    is-help? (println help-menu)

    :else (println (make-get))))
