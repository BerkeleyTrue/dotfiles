#!/bin/bash
theme="power-menu"
dir="$HOME/.config/rofi"

uptime=$(uptime -p | sed -e 's/up //g')
host=$(uname -n)

rofi_command="rofi -theme $dir/$theme -selected-row 0 -dmenu"

# Options
shutdown=""
reboot=""
lock="󰌾"
suspend=""
logout="󰍃"

# Variable passed to rofi
options="$lock\n$shutdown\n$reboot\n$suspend\n$logout"

chosen="$(echo -e "$options" | $rofi_command -p "$USER@$host" -mesg "Uptime: $uptime")"

case $chosen in
$shutdown)
  systemctl poweroff
  ;;
$reboot)
  systemctl reboot
  ;;
$lock)
  $HOME/.local/bin/lock
  ;;
$suspend)
  # pause music
  /usr/bin/playerctl pause
  # enable xsecurelock
  /usr/bin/xsecurelock &
  (sleep .250 && /usr/bin/systemctl suspend)
  ;;
$logout)
  systemctl --user stop xmonad.target
  ;;
esac
