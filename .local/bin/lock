#!/bin/bash

{
	# exits non-zero if nothing is playing..
	playerctl pause &>/dev/null
	makoctl set-mode do-not-disturb
} &

echo "Locking..."

# hyprlock blocks until unlocked
# dimming is handled by hyprlock config
hyprlock && makoify -a "Hephaestus" -u low -i distributor-logo-nixos "Welcome Back!"

echo "Unlocking..."

makoctl set-mode default
