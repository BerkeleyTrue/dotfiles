#!/bin/sh
# X11 profile
#
# NOTE: Run by lighdm
# TODO: update programs

# make sure lightlocker is running for lighdm lock screen
# /usr/bin/light-locker &

# make CapsLock behave like Ctrl:
setxkbmap -option ctrl:nocaps &

# make short-pressed Ctrl behave like Escape:
xcape -e 'Control_L=Escape' &

echo "starting xprofile apps" &

# source $XDG_CONFIG_HOME/screenlayout/default.sh & # running from xmonad

# start volumeicon
volumeicon &

# start pulse audio conf
pasystray &

# used for controlling system wide privileges
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# desktop background manager
# nitrogen --restore & # running from xmonad

#window composer
picom -b --experimental-backends &

# network manager
nm-applet &

# manage power settings
xfce4-power-manager &

# manage and install packages
pamac-tray &

# clipboard manager
clipit &

# screen shot tool
flameshot &

# bluetooth
blueman-applet &

# touchpad support
# synclient NaturalScrolling=1 VertScrollDelta=-113 &

# private internet access vpn
/opt/piavpn/bin/pia-client &
frame &

# hide cursor when inactive
/bin/unclutter -b &
